{
  "compilerOptions": {
    "target": "ES2020",              // Modern JavaScript output
    "module": "CommonJS",            // Node.js-compatible
    "outDir": "./dist",              // Output for compiled JS
    "rootDir": "./src",              // Where your .ts files live
    "strict": true,                  // Enforce type safety
    "esModuleInterop": true,         // Enable import/export compatibility
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
